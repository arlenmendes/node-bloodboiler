{
  "name": "bloodboiler",
  "version": "1.0.0",
  "description": "A API boilerplate using ExpressJS/MongoDB authentication ready and more",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=production node app.js",
    "start:dev": "NODE_ENV=development nodemon app.js",
    "test": "jest --detectOpenHandles"
  },
  "author": "Lucas A Pelegrino <lucas.assuncao.p@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.1",
    "nodemailer": "^5.1.1",
    "swagger-express": "^1.0.5",
    "swagger-express-middleware": "^2.0.1"
  },
  "devDependencies": {
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.6.0",
    "jest-yaml-transform": "^0.2.0",
    "nodemon": "^1.18.10",
    "supertest": "^3.3.0"
  },
  "jest": {
    "verbose": true,
    "automock": false,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "yml"
    ],
    "transform": {
      "\\.yml$": "jest-yaml-transform"
    }
  }
}
